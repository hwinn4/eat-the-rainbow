<h3>Enter date</h3>
<%= form_tag('/foods', method: 'get') do %>
  <%= label_tag('food[date]', "Date:") %>
  <%= text_field_tag('food[date]') %>
  <%= submit_tag("Submit") %>
<% end %>

<h3>What Colors Did You Enjoy on <%= @date %>?</h3>
<% @colors.each do |color| %>
  <%= form_tag('/foods', method: 'post') do %>
    <%= hidden_field_tag('food[color]', color.first) %>
    <%= hidden_field_tag('food[date]', @date) %>
    <%= submit_tag("#{color.first}") %>
  <% end %>
<% end %>

<h3>Color Log (<%= @date %>)</h3>
<% @foods.each do |food| %>
  <p><%= food.color %> - <%= food.color_count %></p>
<% end %>